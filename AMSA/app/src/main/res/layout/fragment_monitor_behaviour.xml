<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ss174h.amsa.MonitorBehaviourFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg">

        <TextView
            android:id="@+id/displaytotalappfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/totalstoragefragment"
            android:text="Total Apps Running"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/totalstoragefragment"
            android:layout_marginTop="25dp"
            android:text="Running Applications"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/totalstoragefragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/totalmemoryfragment"
            android:text="Total Storage Info"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/totalmemoryfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Total Memory Info"
            android:textColor="@color/white" />


    </RelativeLayout>

</FrameLayout>
